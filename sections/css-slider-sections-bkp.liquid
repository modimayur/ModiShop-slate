{%- style -%}
 .section-{{ section.id }}-padding {
    {% if section.settings.padding_top > 60 %}
      padding-top: {{ section.settings.padding_top | divided_by: 2 | round: 0 }}px;      
    {% else %}
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    {% endif %}
    {% if section.settings.padding_bottom > 60 %}
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 | round: 0 }}px;      
    {% else %}
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {% endif %}
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="slider-{{ section.id }}"
  class="page-width section-{{ section.id }}-padding"
  data-autoplay_speed="{{ section.settings.autoplay_speed }}"
  section-id="{{ section.id }}"
>
  <css-slider
    data-options='
      {
          "selector": ".css-slide",
          "groupCells": true,
          "listenScroll": true,
          {% if section.settings.autoplay -%}
          "autoplay": {{ section.settings.autoplay_speed | times: 1000 }},
          "thumbnailsDOM": "<div class=\"css-slider-dot-navigation css-slider-dot-navigation--autoplay\" style=\"display:none\"></div>",
          "indexNavDOM": "<div class=\"css-slider-index-navigation css-slider-index-navigation--autoplay css-slider-index-navigation--autoplay--running\"><span class=\"css-slider-current\">1</span> / <span class=\"css-slider-total\">1</span></div>",
          {%- endif %}
          "navigationDOM": "<span class=\"css-slider-button css-slider-prev\" style=\"display:none\"><svg fill=\"none\" height=\"13\" viewBox=\"0 0 8 13\" width=\"8\" xmlns=\"http://www.w3.org/2000/svg\"><g fill=\"#000\" ><path d=\"m7.91419 1.41431-6.48529 6.48528-1.4142102-1.41422 6.4852802-6.48527702z\"/><path d=\"m6.48528 12.9849-6.48528027-6.48532 1.41421027-1.41421 6.48528 6.48523z\"/></g></svg></span><span class=\"css-slider-button css-slider-next\" style=\"display:none\"><svg width=\"9\" height=\"13\" viewBox=\"0 0 9 13\" fill=\"none\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M0.914169 11.5857L7.39945 5.10041L8.81367 6.51463L2.32838 12.9999L0.914169 11.5857Z\" fill=\"black\"/><path d=\"M2.34307 0.0151367L8.82835 6.50042L7.41414 7.91463L0.928857 1.42935L2.34307 0.0151367Z\" fill=\"black\"/></svg></span>"
      }
    '
    class="css-slider fade css-slider--bottom-navigation"
    id="css-slider-{{  section.id }}"
    style="--autorotate-interval: {{ section.settings.autoplay_speed }}s;"
  >
    <div class="grid grid--slider {{ section.settings.grid-desktop }} {{ section.settings.grid-mobile }}">
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 001</div>
      </div>
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 002</div>
      </div>
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 003</div>
      </div>
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 004</div>
      </div>
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 005</div>
      </div>
      <div class="css-slide">
        <div class="card grid-item-inner content-container color-scheme-3 gradient">CSS Slide 006</div>
      </div>
    </div>
  </css-slider>
</div>

{% schema %}
{
  "name": "CSS Slideshow",
  "tag": "section",
  "class": "mount-css-slider mount-slideshow mount-video-background supports-absolute-header",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.slider.settings.heading.default",
      "label": "t:sections.slider.settings.heading.label"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:sections.all.heading_alignment.label",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.heading_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.heading_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.heading_alignment.options__3.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.all.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.all.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.all.image_ratio.options__3.label"
        },
        {
          "value": "circle",
          "label": "t:sections.all.image_ratio.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.all.image_ratio.label"
    },
    {
      "type": "select",
      "id": "grid-desktop",
      "label": "t:sections.slider.settings.desktop-grid.label",
      "default": "grid-3",
      "options": [
        {
          "value": "grid-1",
          "label": "t:sections.slider.settings.desktop-grid.options__1.label"
        },
        {
          "value": "grid-2",
          "label": "t:sections.slider.settings.desktop-grid.options__2.label"
        },
        {
          "value": "grid-3",
          "label": "t:sections.slider.settings.desktop-grid.options__3.label"
        },
        {
          "value": "grid-4",
          "label": "t:sections.slider.settings.desktop-grid.options__4.label"
        },
        {
          "value": "grid-5",
          "label": "t:sections.slider.settings.desktop-grid.options__5.label"
        },
        {
          "value": "grid-6",
          "label": "t:sections.slider.settings.desktop-grid.options__6.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "grid-mobile",
      "label": "t:sections.slider.settings.mobile-grid.label",
      "default": "grid-lap-2",
      "options": [
        {
          "value": "grid-lap-1",
          "label": "t:sections.slider.settings.mobile-grid.options__1.label"
        },
        {
          "value": "grid-lap-2",
          "label": "t:sections.slider.settings.mobile-grid.options__2.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every (seconds)",
      "min": 1,
      "max": 40,
      "step": 0.5,
      "default": 5,
      "unit": "s"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [{ "type": "@app" }, { "type": "@theme" }, { "type": "text" }],
  "presets": [
    {
      "name": "CSS Slideshow",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text": "This is a text block inside a group block!"
          }
        }
      ]
    }
  ]
}
{% endschema %}
